#!/bin/bash

docker pull llparse/git-mirror
docker run \
  -d \
  -v git-mirror:/var/git \
  --net=host \
  --restart=always \
  --name=git-mirror \
    llparse/git-mirror

docker pull llparse/git-serve
docker run \
  -d \
  -v git-mirror:/var/git \
  -v /var/log/nginx:/var/log/nginx \
  --net=host \
  --restart=always \
  --name=git-serve \
    llparse/git-serve
